<!-- Title -->
<div class="row">
  <div class="small-8 small-centered columns center first">
    <%= image_tag "chegg_logo.png" %>
  </div>
</div>
<div class="row">
  <div class="small-8 small-centered columns center">
    <h1 id="headline">CHEGG DELTA</h1>
  </div>
</div>

<!-- Search Bar -->
 <div class="row collapse search-group">
  <div class="small-10 columns">
    <input type="text" placeholder="Search" id="search-box">
  </div>
  <div class="small-2 columns">
    <a href="#" class="button postfix search-submit"><i class="fa fa-search"></i></a>
  </div>
</div>

<!-- New Post -->
<div class="row">
  <div class="small-8 small-centered columns">
    <div id="write-post">Write here...</div>
  </div>
</div>

<!-- New Post's Tags -->
<div class="row">
  <div class="small-8 small-centered columns">
    <span class="new-tag-wrapper opaque">
      <i class="fa fa-tags"></i><input type="text" class="new-tags" placeholder="Enter tags here">
    </span>
  </div>
</div>

<!-- Create New Post -->
<div class="row new-btn-wrapper opaque">
  <div class="small-8 small-centered columns">
    <div class="row">
      <div class="small-2 small columns">
        <a href="/posts/new" class="new-post-btn">Publish</a>
      </div>
      <div class="small-10 small columns">
        <a href="/posts/new" class="new-post-btn">Go full screen</a>
      </div>
    </div>
  </div>
</div>

<!-- Featured tags -->
<div class="row">
  <div class="small-8 small-centered columns center">
    <section class="featured-tags">
      <strong><header>MOST USED TAGS</header></strong>
      <br />
      <!--Do comma delimited featured tag list here @TODO: make tags linkable -->
      <% @tags.each_with_index do |tag, i| %>
        <%= link_to tag.name, tagged_url(:tag => tag.name), :class=>"featured-tag" %>
      <% end %>
    </section> 
  </div>
</div>

