<div class="row">
  <div class="large-12 columns first new-post-header">
    <h1>Create Article</h1>
  </div>
</div>

<%= form_for @post, url: {action: "create"}, html: {class: "create-form"} do |f| %>
  <div class="row">
    <div class="large-12 columns">
        <%= f.text_field :title, {class: "new-post-title", placeholder: "Title"}  %>
      </div>
    </div>
  </div>
  
  <div class="row">
    <div class="large-12 columns">
      <div id="post_body_editor" style = "min-height: 250px">
        Write here...
      </div>
    </div>
  </div>
  
  <br>
  
  <div class="row">
    <div class="large-12 columns">
      <span>
        <i class="fa fa-tags"></i>
        <%= f.text_field :tag_list, {class: "new-tags", placeholder: "Enter tags here"} %>
      </span>
    </div>
  </div>
  
  <div class = "row">
    <div class="large-2 columns">&nbsp;</div>
    <div class="large-8 columns">
      <%= f.submit "Create", {class: "button expand"} %>
    </div>
    <div class="large-2 columns">&nbsp;</div>
  </div>
  
  <%= f.text_area :body, style: ["display: none"] %>

<% end %>
