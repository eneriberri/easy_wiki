<div class="row">
  <div class="small-12 columns first all-post-header">
  	<h1>Articles</h1>
  </div>
</div>

<div class="row">
  <div class="small-12 columns">
  	<% @posts.each do |post| %>
  	  <a href="<%=post_url(post.id) %>" class="all-post-link"> <%= post.title %> </a>
      <div class="all-post-body">
        <%= strip_tags(post.body)[0,100] %>...
      </div>
      <div class="all-post-tags">
        <% post.tags.each do |tag| %>
          <%= link_to tag.name, tagged_url(:tag => tag.name), :class=>"featured-tag" %>
        <% end %>
      </div>
  	  <br />
  	<% end %>
  </div>
</div>

<div class="row">
  <div class="small-12 columns last">
    <a href = "/posts/new">Create new</a>
  </div>
</div>